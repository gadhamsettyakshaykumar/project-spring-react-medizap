package com.mahesvara.Medizap1.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import com.mahesvara.Medizap1.model.CartModel;
import com.mahesvara.Medizap1.services.CartService;

@RestController
@RequestMapping("/cart")
public class CartController {
	
	@Autowired
	CartService service;
	
	@PostMapping("/add")
	public CartModel addtocart(@RequestParam int medicine_id,@RequestParam int quantity)
	{
		return service.addtocart(medicine_id, quantity);
	}
	
	@GetMapping("/items")
	public List<CartModel> getallItems(){
		return service.getallitems();
	}
	
	@DeleteMapping("/remove/{id}")
	public CartModel removecart(int id) {
		return service.removecartItems(id);
		
		
	}
}
