package com.mahesvara.Medizap1.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import com.mahesvara.Medizap1.model.CartModel;
import com.mahesvara.Medizap1.services.CartService;

@RestController
@RequestMapping("/cart")
public class CartController {
	
	@Autowired
	CartService service;
	
	@PostMapping("/add")
	public CartModel addtocart(@RequestParam int medicine_id,@RequestParam int quantity)
	{
		return service.getallCartItems(medicine_id, quantity);
	}
	
}
